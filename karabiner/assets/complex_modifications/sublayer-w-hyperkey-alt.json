            "key_code": "f"
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": ["left_option", "right_command"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Search in all files (vscode, intellij)",
