{
  "title": "Sublayer \"w\"-activate using right shift",
  "rules": [
    {
      "description": "Sublayer \"w\"-activate using right shift",
      "manipulators": [
        {
          "description": "Toggle on/off window layer",
          "from": {
            "key_code": "right_shift"
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 400
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "is_window_layer_on",
                "value": 0
              }
            },
            {
              "set_notification_message": {
                "id": "window_layer_on",
                "text": ""
              }
            }
          ],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "is_window_layer_on",
                "value": 1
              }
            },
            {
              "set_notification_message": {
                "id": "window_layer_on",
                "text": "WINDOW LAYER enabled"
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Left Half",
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option", "right_command", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Right Half",
          "from": {
            "key_code": "s"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option", "right_command", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Move to next monitor",
          "from": {
            "key_code": "d"
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["left_option", "right_command", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Full Screen",
