{
  "title": "Sublayer \"n\" (navigation)",
  "rules": [
    {
      "description": "Sublayer \"n\" (navigation)",
      "manipulators": [
        {
          "description": "Toggle on/off navigation layer on home row",
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 300
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "is_navigation_layer_on",
                "value": 1
              }
            },
            {
              "set_notification_message": {
                "id": "navigation_layer_on",
                "text": "NAVIGATION LAYER enabled"
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "is_navigation_layer_on",
                "value": 0
              }
            },
            {
              "set_notification_message": {
                "id": "navigation_layer_on",
                "text": ""
              }
            }
          ]
        },
        {
          "description": "h -> left_arrow",
          "type": "basic",
          "from": {
            "key_code": "h"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "j -> down_arrow",
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "k -> up_arrow",
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "l -> right_arrow",
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "semicolon -> toggle fold (vscode)",
          "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "k",
              "modifiers": ["right_command"]
            },
            {
              "key_code": "l",
              "modifiers": ["right_command"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            },
            {
              "bundle_identifiers": ["^com\\.microsoft\\.VSCode$"],
              "type": "frontmost_application_if"
            }
          ]
        },
        {
          "description": "semicolon -> toggle fold (intellij)",
          "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": ["right_option", "right_command"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            },
            {
              "bundle_identifiers": ["^com\\.jetbrains\\.intellij$"],
              "type": "frontmost_application_if"
            }
          ]
        },
        {
          "description": "] -> move cursor left one word",
          "type": "basic",
          "from": {
            "key_code": "close_bracket"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "; -> move cursor right one word",
          "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "w -> Delete the word to the left of the insertion point",
          "type": "basic",
          "from": {
            "key_code": "w"
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["left_option"]
            }
