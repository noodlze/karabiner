{
  "title": "Sublayer level 2",
  "rules": [
    {
      "description": "Sublayer 2",
      "manipulators": [
        {
          "description": "Toggle on/off sublayer 2 variable",
          "type": "basic",
          "from": {
            "key_code": "a"
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 3
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "is_layer_2_on",
                "value": 1
              }
            },
            {
              "set_notification_message": {
                "id": "layer_2_on",
                "text": "LAYER 2 enabled"
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "is_layer_2_on",
                "value": 0
              }
            },
            {
              "set_notification_message": {
                "id": "layer_2_on",
                "text": ""
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_layer_1_on",
              "value": 1
            }
          ]
        },
        {
          "description": "Find",
