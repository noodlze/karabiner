{
    "title": "Exchange quote with doublequote",
    "rules": [
      {
        "description": "to: doublequote on first layer and shift + doublequote -> quote on 2nd layer",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "quote",
              "modifiers": {
                "mandatory": [
                  "right_shift"
                ]
              }
            },
            "to": [
              {
                "key_code": "quote"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "quote",
              "modifiers": {
                "mandatory": [
                  "left_shift"
                ]
              }
            },
            "to": [
              {
                "key_code": "quote"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "quote"
            },
            "to": [
              {
                "key_code": "quote",
                "modifiers": [
                  "left_shift"
                ]
              }
            ]
          } 
        ]
      }
    ]
  }