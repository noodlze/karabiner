{
  "title": "Sublayer \"n\" (navigation)",
  "rules": [
    {
      "description": "Sublayer \"n\" (navigation)",
      "manipulators": [
        {
          "description": "Toggle on/off navigation layer on home row",
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 300
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "is_navigation_layer_on",
                "value": 1
              }
            },
            {
              "set_notification_message": {
                "id": "navigation_layer_on",
                "text": "NAVIGATION LAYER enabled"
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "is_navigation_layer_on",
                "value": 0
              }
            },
            {
              "set_notification_message": {
                "id": "navigation_layer_on",
                "text": ""
              }
            }
          ]
        },
        {
          "description": "h -> left_arrow",
          "type": "basic",
          "from": {
            "key_code": "h"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "j -> down_arrow",
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "k -> up_arrow",
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "l -> right_arrow",
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "a -> move cursor left one word",
          "type": "basic",
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "s -> move cursor right one word",
          "type": "basic",
          "from": {
            "key_code": "s"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "w -> Delete the word to the left of the insertion point",
          "type": "basic",
          "from": {
            "key_code": "w"
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "q -> home",
          "type": "basic",
          "from": {
            "key_code": "q"
          },
          "to": [
            {
              "key_code": "home"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "e -> end",
          "type": "basic",
          "from": {
            "key_code": "e"
          },
          "to": [
            {
              "key_code": "end"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "u -> Option–Shift–Left Arrow: Extend text selection to the beginning of the current word",
          "type": "basic",
          "from": {
            "key_code": "u"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "i -> Shift–Command–Left Arrow: Select the text between the insertion point and the beginning of the current line",
          "type": "basic",
          "from": {
            "key_code": "i"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_command",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "o -> Shift–Command–Right Arrow: Select the text between the insertion point and the end of the current line",
          "type": "basic",
          "from": {
            "key_code": "o"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_command",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "p -> Option–Shift–Right Arrow: Extend text selection to the end of the current word",
          "type": "basic",
          "from": {
            "key_code": "p"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "n -> Shift–Left Arrow: Extend text selection one character to the left",
          "type": "basic",
          "from": {
            "key_code": "n"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "m -> Shift–Down Arrow: Extend text selection to the nearest character at the same horizontal location on the line below",
          "type": "basic",
          "from": {
            "key_code": "m"
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": ", -> Shift–Up Arrow: Extend text selection to the nearest character at the same horizontal location on the line above",
          "type": "basic",
          "from": {
            "key_code": "comma"
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": ". -> Shift–Right Arrow: Extend text selection one character to the right",
          "type": "basic",
          "from": {
            "key_code": "period"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "f -> Control-K: Delete the text between the insertion point and the end of the line or paragraph",
          "type": "basic",
          "from": {
            "key_code": "f"
          },
          "to": [
            {
              "key_code": "k",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        },
        {
          "description": "y -> Control-O: Insert a new line after the insertion point",
          "type": "basic",
          "from": {
            "key_code": "y"
          },
          "to": [
            {
              "key_code": "o",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "is_navigation_layer_on",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}