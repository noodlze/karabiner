{
    "title": "swap 1st and 2nd layer of number row + open/close bracket + semicolon keys",
    "rules": [
        {
            "description": "Toggle on/off inversion of 1st and 2nd layer for symbol keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": ""
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 300
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "set_variable": {
                                "name": "is_invert_symbol_keys_on",
                                "value": 1
                            }
                        },
                        {
                            "set_notification_message": {
                                "id": "invert_symbol_keys",
                                "text": "SYMBOLS LAYER up"
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "is_invert_symbol_keys_on",
                                "value": 0
                            }
                        },
                        {
                            "set_notification_message": {
                                "id": "invert_symbol_keys",
                                "text": ""
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "swap ` + ~",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "grave_accent_and_tilde"
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_invert_symbol_keys_on",
                            "value": 1
                        }
                    ]
                }
            ]
        },
