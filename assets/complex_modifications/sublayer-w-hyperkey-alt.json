{
  "title": "Sublayer \"w\"-activate using alt",
  "rules": [
    {
      "description": "Sublayer \"w\"-activate using alt",
      "manipulators": [
        {
          "description": "Toggle on/off window layer",
          "from": {
            "key_code": "right_option"
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 300
          },
          "to": [
            {
              "key_code": "right_option"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "is_window_layer_on",
                "value": 0
              }
            },
            {
              "set_notification_message": {
                "id": "window_layer_on",
                "text": ""
              }
            }
          ],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "is_window_layer_on",
                "value": 1
              }
            },
            {
              "set_notification_message": {
                "id": "window_layer_on",
                "text": "WINDOW LAYER enabled"
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Left Half",
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option", "right_command", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Right Half",
          "from": {
            "key_code": "s"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option", "right_command", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Full Screen",
          "from": {
            "key_code": "f"
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": ["left_option", "right_command"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Move to next monitor",
          "from": {
            "key_code": "d"
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["left_option", "right_command", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            },
            {
              "bundle_identifiers": ["^com\\.googlecode\\.iterm2$"],
              "type": "frontmost_application_unless"
            }
          ],
          "description": "Window: Previous Tab",
          "from": {
            "key_code": "z"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            },
            {
              "bundle_identifiers": ["^com\\.googlecode\\.iterm2$"],
              "type": "frontmost_application_unless"
            }
          ],
          "description": "Window: Next Tab",
          "from": {
            "key_code": "x"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            },
            {
              "bundle_identifiers": ["^com\\.googlecode\\.iterm2$"],
              "type": "frontmost_application_if"
            }
          ],
          "description": "Window: Previous Tab",
          "from": {
            "key_code": "x"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control", "right_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            },
            {
              "bundle_identifiers": ["^com\\.googlecode\\.iterm2$"],
              "type": "frontmost_application_if"
            }
          ],
          "description": "Window: Next Tab",
          "from": {
            "key_code": "z"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "next pane (iTerm)",
          "from": {
            "key_code": "c"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["right_command", "left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "previous pane (iTerm)",
          "from": {
            "key_code": "v"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["right_command", "left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "Window: Next Window",
          "from": {
            "key_code": "r"
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["right_command"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "is_window_layer_on",
              "type": "variable_if",
              "value": 1
            }
          ],
          "description": "next APP",
          "from": {
            "key_code": "e"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["right_command"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
