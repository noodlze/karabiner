{
    "title": "Sublayer \"w\"(window)",
    "rules": [
        {
            "description": "Sublayer \"w\"-activate using alt",
            "manipulators": [
                {
                    "description": "Toggle on/off window layer",
                    "type": "basic",
                    "from": {
                        "key_code": "right_option"
                    },
                    "to": [
                        {
                            "key_code": "right_option"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 300
                    },
                    "to_if_held_down": [
                        {
                            "set_variable": {
                                "name": "is_window_layer_on",
                                "value": 1
                            }
                        },
                        {
                            "set_notification_message": {
                                "id": "window_layer_on",
                                "text": "WINDOW LAYER enabled"
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "is_window_layer_on",
                                "value": 0
                            }
                        },
                        {
                            "set_notification_message": {
                                "id": "window_layer_on",
                                "text": ""
                            }
                        }
                    ]
                },
                {
                    "description": "Window: Left Half",
                    "type": "basic",
                    "from": {
                        "key_code": "a"
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "left_option",
                                "right_command",
                                "right_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "Window: Right Half",
                    "type": "basic",
                    "from": {
                        "key_code": "s"
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "left_option",
                                "right_command",
                                "right_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "Window: Full Screen",
                    "type": "basic",
                    "from": {
                        "key_code": "f"
                    },
                    "to": [
                        {
                            "key_code": "f",
                            "modifiers": [
                                "left_option",
                                "right_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "Window: Move to next monitor",
                    "type": "basic",
                    "from": {
                        "key_code": "d"
                    },
                    "to": [
                        {
                            "key_code": "n",
                            "modifiers": [
                                "left_option",
                                "right_command",
                                "right_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "Window: Previous Tab",
                    "type": "basic",
                    "from": {
                        "key_code": "z"
                    },
                    "to": [
                        {
                            "key_code": "tab",
                            "modifiers": [
                                "left_control",
                                "right_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "Window: Next Tab",
                    "type": "basic",
                    "from": {
                        "key_code": "x"
                    },
                    "to": [
                        {
                            "key_code": "tab",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "next pane (iTerm)",
                    "type": "basic",
                    "from": {
                        "key_code": "c"
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "right_command",
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "previous pane (iTerm)",
                    "type": "basic",
                    "from": {
                        "key_code": "v"
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "right_command",
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "Window: Next Window",
                    "type": "basic",
                    "from": {
                        "key_code": "r"
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": [
                                "right_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                },
                {
                    "description": "next APP",
                    "type": "basic",
                    "from": {
                        "key_code": "e"
                    },
                    "to": [
                        {
                            "key_code": "tab",
                            "modifiers": [
                                "right_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "is_window_layer_on",
                            "value": 1
                        }
                    ]
                }
            ]
        }
    ]
}